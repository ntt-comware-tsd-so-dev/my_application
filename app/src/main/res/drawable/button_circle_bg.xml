<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval"
            >
            <size
                android:height="32dp"
                android:width="32dp" />
            <solid
                android:color="@color/device_on_bg">
            </solid>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval"
            >
            <size
                android:height="32dp"
                android:width="32dp" />
            <solid
                android:color="@color/device_offline_bg">
            </solid>
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval"
            >
            <size
                android:height="32dp"
                android:width="32dp" />
            <solid
                android:color="@color/device_off_bg">
            </solid>
        </shape>
    </item>
</selector>
